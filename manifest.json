{
  "name": "X Bookmarks Exporter",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Export X (Twitter) bookmarks to JSON.",
  "action": {
    "default_title": "Export X Bookmarks",
    "default_popup": "popup.html"
  },
  "permissions": ["downloads", "activeTab", "scripting"],
  "host_permissions": ["https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/i/bookmarks*"],
      "js": ["content-script.js"]
    }
  ]
}
